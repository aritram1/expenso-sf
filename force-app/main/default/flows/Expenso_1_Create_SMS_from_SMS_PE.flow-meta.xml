    <formulas>
        <name>balanceUpdateCheckboxFormula</name>
        <dataType>Boolean</dataType>
        <expression>OR(
    CONTAINS(LOWER({!$Record.Content__c}), &quot;balance&quot;),
    CONTAINS(LOWER({!$Record.Content__c}), &quot;avl limit&quot;),
    CONTAINS(LOWER({!$Record.Content__c}), &quot;avl bal&quot;),
    CONTAINS(LOWER({!$Record.Content__c}), &quot;available bal&quot;),
    CONTAINS(LOWER({!$Record.Content__c}), &quot;has been received on your icici bank credit card account&quot;) 
)</expression>
    </formulas>
    <formulas>
        <name>createTransactionCheckboxFormula</name>
        <dataType>Boolean</dataType>
        <expression>OR({!TypeFormula} == &apos;Credit&apos;, {!TypeFormula} == &apos;Debit&apos;)</expression>
    </formulas>
    <formulas>
        <description>Removes the special characters from the received at value and generates an all-number external id</description>
        <name>ExternalIdFormula</name>
        <dataType>String</dataType>
        <expression>SUBSTITUTE(SUBSTITUTE(SUBSTITUTE(SUBSTITUTE({!$Record.Received_At__c},&apos;-&apos;, &apos;&apos;),&apos;:&apos;, &apos;&apos;), &apos; &apos;, &apos;&apos;), &apos;.&apos;, &apos;&apos;)</expression>
    </formulas>
    <formulas>
        <name>FinanceAccountFormula</name>
        <dataType>String</dataType>
        <expression>IF(
    REGEX(LOWER({!$Record.Content__c}), &quot;.*(6414|a/cx6414|xx6414).*&quot;),
    &quot;SBI-SA&quot;,
    IF(
        REGEX(LOWER({!$Record.Content__c}), &quot;.*(xxx360|xx360|a/cx360).*&quot;),
        &quot;ICICI-SA&quot;,
        IF(
            REGEX(LOWER({!$Record.Content__c}), &quot;.*(9560|x9560|\\*9560|xxxx9560|hdfc bank a/c|7164).*&quot;),
            &quot;HDFC-SA&quot;,
            IF(
                REGEX(LOWER({!$Record.Content__c}), &quot;.*(9006|x9006).*&quot;),
                &quot;ICICI-CC&quot;,
                IF(
                    REGEX(LOWER({!$Record.Content__c}), &quot;.*(7005|xx7005).*&quot;),
                    &quot;ICICI-AMAZON-CC&quot;,
                    IF(
                        REGEX(LOWER({!$Record.Content__c}), &quot;.*(2004|xx2004).*&quot;),
                        &quot;HDFC-RUPAY-CC&quot;,
                        &quot;Unknown&quot;
                    )
                )
            )
        )
    )
)</expression>
    </formulas>
    <formulas>
        <name>stackTraceErrorMessage255Chars</name>
        <dataType>String</dataType>
        <expression>LEFT({!$Flow.FaultMessage}, 255)</expression>
    </formulas>
    <formulas>
        <name>transactionDateFormula</name>
        <dataType>Date</dataType>
        <expression>DATEVALUE({!$Record.Received_At__c})</expression>
    </formulas>
    <formulas>
        <name>TypeFormula</name>
        <dataType>String</dataType>
        <expression>IF(
    REGEX(LOWER({!$Record.Content__c}), {!Const_DEBIT_REGEX}),
    &apos;Debit&apos;,
    IF(
        REGEX(LOWER({!$Record.Content__c}), {!Const_CREDIT_REGEX}),
        &apos;Credit&apos;,
        IF(
            REGEX(LOWER({!$Record.Content__c}), {!Const_BALANCE_UPDATE_REGEX}),
            &apos;Balance Update&apos;,
            &apos;Promotional&apos;
        )
    )
)</expression>
    </formulas>
